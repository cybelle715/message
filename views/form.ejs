<!DOCTYPE html>
<html>

<head>
    <%- include ('./partials/globalHead') %>
        <link rel="stylesheet" href="/stylesheets/form.css">
</head>

<body>
    <%- include ('./partials/header') %>
        <main>

            <div class="container">
                <h2>New message</h2>
                <form action="/new" method="post">
                    <div class="form-group">
                        <label for="message">Message:</label>
                        <textarea name="messageText" id="message" cols="30" rows="10" required></textarea>
                    </div>

                    <div class="form-group">
                        <label for="author">Author:</label>
                        <input type="text" id="author" name="messageUser" required />
                    </div>

                    <button type="submit">Send</button>
                </form>
            </div>
        </main>
        <%- include ('./partials/footer') %>
</body>

</html>